{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile cache.c",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "cache_sim",
                "src/cache.c",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Compile direct_map_cache.c",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "direct_cache",
                "direct_map_cache.c",
                "-lm"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run cache simulator",
            "type": "shell",
            "command": "echo",
            "args": ["4096 16 1"],
            "group": "test",
            "dependsOn": "Compile cache.c",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
